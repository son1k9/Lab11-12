<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CustomHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Background" Value="#B9B4C7"/>
        <Setter Property="Foreground" Value="#FAF0E6"/>
    </Style>
    <Style x:Key="ButtonMenu" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="10, 10, 5, 0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="#FAF0E6"/>
        <Setter Property="Foreground" Value="#5C5470"/>
    </Style>
</ResourceDictionary>